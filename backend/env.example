# DairyChain Pro Backend Environment Variables

# Supabase Configuration
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET_KEY=your_very_long_and_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dairychain_db

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=True
ENVIRONMENT=development
API_VERSION=v1
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Payment Gateway Configuration (when implementing)
PAYMENT_GATEWAY_URL=https://api.paymentprovider.com
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET's_payment_gateway_secret

# Mobile App Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_PATH=./firebase-service-account.json

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=True
METRICS_PORT=9090

# Security Configuration
ENABLE_RATE_LIMITING=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Background Job Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External API Configuration
WEATHER_API_KEY=your_weather_api_key  # For farming insights
MARKET_DATA_API_KEY=your_market_data_api_key  # For milk price tracking
